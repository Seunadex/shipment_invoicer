#!/usr/bin/env ruby
require "fileutils"

APP_ROOT = File.expand_path("..", __dir__)
APP_NAME = "shipment-invoicer"

def system!(*args)
  system(*args, exception: true)
end

FileUtils.chdir APP_ROOT do
  puts "== ğŸš€ Setting up #{APP_NAME} =="

  puts "\n== ğŸ”§ Installing dependencies =="
  system! "gem install bundler --conservative"
  system("bundle check") || system!("bundle install")

  puts "\n== ğŸ—ƒï¸ Preparing database =="
  system! "bin/rails db:prepare"

  puts "\n== ğŸ§¹ Removing old logs and tempfiles =="
  system! "bin/rails log:clear tmp:clear"

  puts "\n== ğŸ” Restarting application server (dev only) =="
  system! "bin/rails restart"

  puts "\nâœ… Setup complete."

  puts "\nâ„¹ï¸ You can now run the server with:"
  puts "   bin/rails server"

  puts "\nğŸ§ª To run the test suite:"
  puts "   bundle exec rspec"
end
